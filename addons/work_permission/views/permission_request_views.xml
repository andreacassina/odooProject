<?xml version="1.0"?>
<odoo>
    <!-- Dichiarazione viste di default -->
    <record id="permission_request_action" model="ir.actions.act_window">
        <field name="name">Permission Request</field>
        <field name="res_model">permission.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vista Tree personalizzata -->
    <record id="permission_request_tree" model="ir.ui.view">
        <field name="name">permission.request.tree</field>
        <field name="model">permission.request</field>
        <field name="arch" type="xml">
            <tree string="Permission Requests List">
                <field name="title" />
                <field name="applicant" />
                <field name="request_type_id" string="Type" />
                <field name="state" />
                <field name="formatted_datetime_from" string="From" />
                <field name="formatted_datetime_to" string="To" />
                <!-- Buttons for accept or refuse the request -->
                <button name="permission_request_action_accept" type="object" string="Accept" icon='fa-check'/>
                <button name="permission_request_action_refuse" type="object" string="Refuse" icon='fa-solid fa-xmark'/>
            </tree>
        </field>
    </record>

    <record id="estate_property_form_action" model="ir.ui.view">
        <field name="name">permission.request.form</field>
        <field name="model">permission.request</field>
        <field name="arch" type="xml">
            <form string="Permission request">
                <header>
                    <button name="permission_request_action_accept" type="object" string="Accept" icon='fa-check'/>
                    <button name="permission_request_action_refuse" type="object" string="Refuse" icon='fa-solid fa-xmark'/>
                    <field name="state" widget="statusbar" statusbar_visible=""/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="title"/>
                        </h1>
                    </div>
                        <group>
                            <group>
                                <field name="applicant" />
                                <field name="request_type_id" string="Type" />
                                <field name="time_in" string="Time in" />
                            </group>  
                            <group>
                                
                                <!-- <field name="datetime_from" string="From" widget="date"/>
                                <field name="datetime_to" string="To" widget="date"/> -->
                                <field name="datetime_from" widget="datetime" invisible="time_in == 'day'"/>
                                <field name="date_from" widget="date" invisible="time_in != 'day'"/>
                                <field name="datetime_to" widget="datetime" invisible="time_in == 'day'"/>
                                <field name="date_to" widget="date" invisible="time_in != 'day'"/>
                            </group>  
                        </group>  
                </sheet>
            </form>
        </field>
    </record>
</odoo>